root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{fs,fsx}]
max_line_length = 80
fsharp_alternative_long_member_definitions = true
fsharp_keep_max_number_of_blank_lines = 2
fsharp_align_function_signature_to_indentation = true
fsharp_multi_line_lambda_closing_newline = true
fsharp_max_if_then_else_short_width = 0

# Enforce nice formatting for Feliz DSL + Record update in Elmish update functions
# This forces the Cmd.XXX to be on a new line
# This also makes the formatting consistent independently of the number of items
fsharp_multiline_bracket_style = stroustrup
fsharp_record_multiline_formatter = number_of_items
fsharp_array_or_list_multiline_formatter = number_of_items
fsharp_max_record_number_of_items = 0
fsharp_max_array_or_list_number_of_items = 0

[*.yml]
indent_size = 2
indent_style = space
